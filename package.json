{
  "name": "node-structure",
  "version": "1.0.0",
  "description": "Structure for node app ",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon src/index.ts",
    "build": "tsc -p tsconfig.json",
    "dev:inspect": "nodemon --inspect src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "changelog": "auto-changelog --template src/templates/changelog.hbs -p && git add CHANGELOG.md",
    "changelog:debug": "auto-changelog --template src/templates/changelog.hbs -p --template json --output changelog-data.json",
    "lint": "tslint -p tsconfig.json",
    "copy:docs": "cpy 'docs/**/*.yaml' '../dist/' --cwd=src --parents"
  },
  "author": "Pablo Emilio Pupo Marchena",
  "license": "ISC",
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/i18next-node-fs-backend": "^2.1.0",
    "@types/jest": "^26.0.15",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.4",
    "@types/reflect-metadata": "^0.1.0",
    "@types/supertest": "^2.0.10",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "i18next": "^19.8.4",
    "i18next-express-middleware": "^2.0.0",
    "i18next-node-fs-backend": "^2.1.3",
    "mongoose": "^5.10.11",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0-alpha.6",
    "swagger-jsdoc": "^5.0.0",
    "swagger-ui-express": "^4.1.4",
    "tsconfig-paths": "^3.9.0",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.29",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/mongoose": "^5.7.37",
    "@types/node": "^14.14.6",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "auto-changelog": "^2.2.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "changelog",
    "unreleased": true,
    "commitLimit": false,
    "issueUrl": "http://jira.user.com.br/browse/{id}",
    "replaceText": {
      "[Ff]eature:": "",
      "[Ff]ix:": "",
      "[Bb]reak:": "",
      "^ #(.{6})\\s": "[$1](https://app.clickup.com/t/$1) - "
    },
    "includeBranch": [
      "develop",
      "master"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "node",
      "json"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testEnvironment": "node",
    "testTimeout": 30000,
    "collectCoverage": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test && pretty-quick --staged",
      "pre-push": "npm run lint && npm test"
    }
  }
}
